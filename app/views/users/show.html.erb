<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <%= render 'post-count/day-count', today_book: @today_book, yesterday_book: @yesterday_book %>
      <%= render 'post-count/weak-count', this_week_book: @this_week_book, last_week_book: @last_week_book %>
    </div>
  </div>
</div>
