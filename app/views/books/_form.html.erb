<%= form_with model:book,local:true do |f| %>
  <div class="form-group">
    <div class ="field_with_errors">
      <label for ="book-title">Title</label>
    </div>
    <div class ="field_with_errors">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="form-group">
    <label for="book-opinion">Opinion</label>
    <div class ="field_with_errors">
      <%= f.text_area :body %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>
